{% extends "base.html.j2" %} 
{% block title %}Home - CuraVie{% endblock %}
{% block content %}
<section class="hero">
    <div class="container">
        <h1 class="hero-title" data-translate-key="hero_title">AI-powered Digital Health Record Platform</h1>
        <p class="hero-subtitle" data-translate-key="hero_subtitle">Ensure secure and accessible health records for migrant workers</p>
        <div class="hero-buttons">
            <a href="{{ url_for('signup')}}" class="btn btn-primary" data-translate-key="hero_signup_btn">Sign Up</a>
            <a href="{{ url_for('login') }}" class="btn btn-secondary" data-translate-key="hero_login_btn">Login</a>
        </div>
    </div>
</section>

<section class="features">
    <div class="container features-container">
        <div class="card feature-card">
            <div class="feature-icon">📄</div> 
            <h3 class="feature-title" data-translate-key="feature_records_title">Health Records</h3>
            <p class="feature-description" data-translate-key="feature_records_desc">Securely store and manage digital health records with AI-powered insights.</p>
        </div>
        <div class="card feature-card">
            <div class="feature-icon">🏥</div> 
            <h3 class="feature-title" data-translate-key="feature_hospitals_title">Hospitals</h3>
            <p class="feature-description" data-translate-key="feature_hospitals_desc">Find nearby hospitals and healthcare facilities with real-time availability.</p>
        </div>
        <div class="card feature-card">
            <div class="feature-icon">🚑</div> 
            <h3 class="feature-title" data-translate-key="feature_emergency_title">Emergency Contact</h3>
            <p class="feature-description" data-translate-key="feature_emergency_desc">Quick access to emergency services and critical health information.</p>
        </div>
    </div>
</section>
{% endblock %}