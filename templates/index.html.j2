{% extends "base.html.j2" %}

{% block title %}Home - CuraVie{% endblock %}

{% block content %}

<body data-page="home" data-section="home">
    <!-- Header -->
    <header class="header">
        <div class="header-container">
            <div class="logo">
                <div class="logo-icon">🏥</div>
                <span class="logo-text">CuraVie</span>
            </div>
            <nav class="nav">
                <a href="index.html" class="nav-link active">🏠 Home</a>
                <a href="health_records.html" class="nav-link">📄 Records</a>
                <a href="facilities.html" class="nav-link">🏥 Hospitals</a>
            </nav>
            <div class="header-actions">
                <div class="language-switcher">
                    <span>🌐</span>
                    <select id="language-select">
                        <option value="en">English</option>
                        <option value="hi">हिंदी</option>
                        <option value="ml">മലയാളം</option>
                        <option value="ta">தமிழ்</option>
                    </select>
                </div>
                <a href="signin.html" class="btn btn-primary">🔑 Login</a>
                <button class="mobile-menu-toggle" id="mobile-menu-toggle">☰</button>
            </div>
        </div>
        <!-- Mobile Navigation -->
        <nav class="mobile-nav" id="mobile-nav">
            <div class="nav">
                <a href="index.html" class="nav-link active">🏠 Home</a>
                <a href="health_records.html" class="nav-link">📄 Records</a>
                <a href="facilities.html" class="nav-link">🏥 Hospitals</a>
                <a href="signin.html" class="nav-link">🔑 Login</a>
            </div>
        </nav>
    </header>

    <!-- Hero Section -->
    <main class="hero">
        <div class="hero-container">
            <div class="hero-content">
                <h1 class="hero-title">AI-powered Digital Health Record Platform </h1>
                <p class="hero-subtitle">Ensure secure and accessible health records for migrant workers</p>
                <div class="hero-buttons">
                    <a href={{ url_for('signup')}} class="btn btn-primary btn-large">Sign Up</a>
                    <a href="signin.html" class="btn btn-secondary btn-large">Login</a>
                </div>
                <!-- Logged in message (hidden by default) -->
                <div id="logged-in-message" class="logged-in-message" style="display: none;">
                    <div class="message-card">
                        <h3>🚫 Access Restricted</h3>
                        <p>You are already logged in. Please logout to access this page.</p>
                        <p>Redirecting to your dashboard...</p>
                    </div>
                </div>
            </div>
            <div class="hero-illustration">
                <div class="healthcare-image-container">
                    <svg class="healthcare-image" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
                        <!-- Healthcare professionals illustration -->
                        <defs>
                            <linearGradient id="tealGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                <stop offset="0%" style="stop-color:#1A8F8F;stop-opacity:1" />
                                <stop offset="100%" style="stop-color:#4CAF50;stop-opacity:1" />
                            </linearGradient>
                        </defs>

                        <!-- Background -->
                        <rect width="400" height="300" fill="#F5F7FA" rx="12" />

                        <!-- Clipboard -->
                        <rect x="150" y="50" width="100" height="130" fill="white" stroke="#D1D5DB" stroke-width="2"
                            rx="8" />
                        <rect x="180" y="30" width="40" height="15" fill="#6C757D" rx="7" />

                        <!-- Document lines -->
                        <line x1="165" y1="80" x2="235" y2="80" stroke="#D1D5DB" stroke-width="2" />
                        <line x1="165" y1="95" x2="220" y2="95" stroke="#D1D5DB" stroke-width="2" />
                        <line x1="165" y1="110" x2="235" y2="110" stroke="#D1D5DB" stroke-width="2" />
                        <line x1="165" y1="125" x2="210" y2="125" stroke="#D1D5DB" stroke-width="2" />

                        <!-- Medical cross -->
                        <rect x="195" y="140" width="10" height="25" fill="#1A8F8F" />
                        <rect x="187" y="148" width="26" height="10" fill="#1A8F8F" />

                        <!-- Doctor figure (left) -->
                        <circle cx="100" cy="120" r="25" fill="#8B4513" />
                        <rect x="80" y="145" width="40" height="60" fill="white" rx="5" />
                        <circle cx="85" cy="160" r="8" fill="#2C2C2C" />
                        <path d="M 85 152 Q 120 152 120 180" stroke="#2C2C2C" stroke-width="3" fill="none" />

                        <!-- Patient figure (right) -->
                        <circle cx="300" cy="130" r="22" fill="#8B4513" />
                        <rect x="285" y="152" width="30" height="55" fill="#1A8F8F" rx="5" />

                        <!-- Medical icons -->
                        <text x="50" y="250" font-size="24" fill="#FF7043">🏥</text>
                        <text x="120" y="250" font-size="24" fill="#4CAF50">👩‍⚕️</text>
                        <text x="280" y="250" font-size="24" fill="#1A8F8F">📋</text>
                        <text x="350" y="250" font-size="24" fill="#FF7043">🚑</text>
                    </svg>
                </div>
            </div>
        </div>
    </main>

    <!-- Feature Cards -->
    <section class="features">
        <div class="features-container">
            <div class="feature-card fade-in">
                <div class="feature-icon">
                    📄
                </div>
                <h3 class="feature-title">Health Records</h3>
                <p class="feature-description">Securely store and manage digital health records with AI-powered insights
                </p>
            </div>
            <div class="feature-card fade-in">
                <div class="feature-icon">
                    🏥
                </div>
                <h3 class="feature-title">Hospitals</h3>
                <p class="feature-description">Find nearby hospitals and healthcare facilities with real-time
                    availability</p>
            </div>
            <div class="feature-card fade-in">
                <div class="feature-icon">
                    🚑
                </div>
                <h3 class="feature-title">Emergency Contact</h3>
                <p class="feature-description">Quick access to emergency services and critical health information</p>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-section">
                <h4>🏥 DHRMS</h4>
                <p>Digital Health Records Management System for migrant workers in Kerala. Ensuring accessible and
                    secure healthcare for all.</p>
            </div>
            <div class="footer-section">
                <h4>Support</h4>
                <a href="#help">💬 Help Center</a>
                <a href="#contact">📞 Contact Us</a>
                <a href="#emergency">🚨 Emergency</a>
                <a href="#language">🌐 Language</a>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 DHRMS - Digital Health Records Management System. All rights reserved.</p>
        </div>
    </footer>

    <script src="scripts.js"></script>
</body>
<h2> This is for informational purposes only. For medical advice or diagnosis, consult a professional.</h2>
{% endblock %}