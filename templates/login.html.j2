{% extends "base.html.j2" %}
{% block title %}Login - CuraVie{% endblock %}
{% block content %}
<div class="container auth-container">
    <div class="card auth-card">
        <div class="auth-header">
            <h1>Welcome Back</h1>
            <p>Log in to your CuraVie account</p>
        </div>
        <form method="POST" action="{{ url_for('login') }}" novalidate>
            {{ form.hidden_tag() }}
            <div class="form-group">
                {{ form.username.label(class="form-label") }}
                {{ form.username(class="form-input", placeholder="Enter your username") }}
            </div>
            <div class="form-group">
                {{ form.password.label(class="form-label") }}
                {{ form.password(class="form-input", placeholder="Enter your password") }}
            </div>

            <div class="form-options">
                <label class="checkbox-container">
                    {{ form.remember_me() }}
                    <span>Remember me</span>
                </label>
                <a href="#" class="forgot-link">Forgot Password?</a>
            </div>
            <div class="form-group">
                {{ form.submit(class="btn btn-primary btn-full-width", value="Login") }}
            </div>
            <div class="form-footer">
                <p>Don't have an account? <a href="{{ url_for('signup') }}">Sign up here</a></p>
            </div>
        </form>
    </div>
     <div class="auth-illustration">
        <img src="https://via.placeholder.com/400" alt="Healthcare Illustration">
    </div>
</div>
{% endblock %}