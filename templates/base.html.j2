<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}CuraVie{% endblock %}</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
</head>
<body>
    <header class="main-header">
        <div class="container navbar">
            <a href="{{ url_for('home') }}" class="navbar-logo">
                <div class="logo-icon">🏥</div>
                <span class="logo-text" data-translate-key="logo_text">CuraVie</span>
            </a>
            {# <nav class="navbar-nav">
                <a href="{{ url_for('home') }}" class="nav-link" data-translate-key="nav_home">Home</a>
                <a href="#" class="nav-link" data-translate-key="nav_records">Records</a>
                <a href="#" class="nav-link" data-translate-key="nav_hospitals">Hospitals</a>
            </nav> #}
            <div class="header-actions">
                <div class="language-switcher">
                    <span>🌐</span>
                    <select id="language-select">
                        <option value="en">English</option>
                        <option value="hi">हिंदी</option>
                        <option value="ml">മലയാളം</option>
                        <option value="ta">தமிழ்</option>
                    </select>
                </div>
                {% if current_user.is_authenticated %}
                    <a href="{{ url_for('dashboard') }}" class="btn btn-secondary" data-translate-key="nav_dashboard">Dashboard</a>
                    <form action="{{ url_for('logout') }}" method="POST" style="display:inline;">
                        {{ logout_form.hidden_tag() }}
                        <button type="submit" class="btn btn-primary" data-translate-key="nav_logout">Logout</button>
                    </form>
                {% else %}
                    <a href="{{ url_for('login') }}" class="btn btn-primary" data-translate-key="nav_login">🔑 Login</a>
                {% endif %}
            </div>
            <button class="mobile-menu-toggle" id="mobile-menu-toggle">☰</button>
        </div>
        <nav class="mobile-nav" id="mobile-nav">
            <a href="{{ url_for('home') }}" class="nav-link" data-translate-key="mobile_nav_home">🏠 Home</a>
            <a href="#" class="nav-link" data-translate-key="mobile_nav_records">📄 Records</a>
            <a href="#" class="nav-link" data-translate-key="mobile_nav_hospitals">🏥 Hospitals</a>
            {% if current_user.is_authenticated %}
                <a href="{{ url_for('dashboard') }}" class="nav-link" data-translate-key="mobile_nav_dashboard">👤 Dashboard</a>
            {% else %}
                 <a href="{{ url_for('login') }}" class="nav-link" data-translate-key="mobile_nav_login">🔑 Login</a>
            {% endif %}
        </nav>
    </header>

    {% with messages = get_flashed_messages(with_categories=true) %}
        {% if messages %}
            <div class="flash-container">
                {% for category, message in messages %}
                    <div class="flash flash-{{ category }}">{{ message }}</div>
                {% endfor %}
            </div>
        {% endif %}
    {% endwith %}
    
    <main class="main-content">
        {% block content %}
        {% endblock %}
    </main>
    
    <script src="{{ url_for('static', filename='js/script.js') }}"></script>
</body>
</html>