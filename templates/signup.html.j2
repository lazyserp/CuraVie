{% extends "base.html.j2" %}
{% block title %}Sign Up - CuraVie{% endblock %}
{% block content %}
<div class="container auth-container">
    <div class="card auth-card">
        <div class="auth-header">
            <h1 data-translate-key="signup_title">Create Account</h1>
            <p data-translate-key="signup_subtitle">Join CuraVie to manage your health records</p>
        </div>
        <form method="POST" action="{{ url_for('signup') }}" novalidate>
            {{ form.hidden_tag() }}
            <div class="form-group">
                {{ form.username.label(class="form-label") }}
                {{ form.username(class="form-input", placeholder="Choose a username", **{'data-translate-key': 'placeholder_username'}) }}
                {% for e in form.username.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>
            <div class="form-group">
                {{ form.email.label(class="form-label") }}
                {{ form.email(class="form-input", placeholder="Enter your email", **{'data-translate-key': 'placeholder_email'}) }}
                {% for e in form.email.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>
            <div class="form-group">
                {{ form.password.label(class="form-label") }}
                {{ form.password(class="form-input", placeholder="Create a strong password", **{'data-translate-key': 'placeholder_password'}) }}
                {% for e in form.password.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>
            <div class="form-group">
                {{ form.confirm_password.label(class="form-label") }}
                {{ form.confirm_password(class="form-input", placeholder="Confirm your password", **{'data-translate-key': 'placeholder_confirm_password'}) }}
                {% for e in form.confirm_password.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>

            <div class="form-group">
                {{ form.role.label(class="form-label") }}
                {{ form.role(class="form-input", id="role-select") }}
                {% for e in form.role.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>

            <!-- Facility Details (shown only when Healthcare Facility is selected) -->
            <div id="facility-fields" style="display: none;">
                <h3 style="margin-top: 20px; margin-bottom: 15px;">Healthcare Facility Details</h3>
                <div class="form-group">
                    {{ form.facility_name.label(class="form-label") }}
                    {{ form.facility_name(class="form-input", placeholder="e.g., City General Hospital") }}
                    {% for e in form.facility_name.errors %}<div class="error">{{ e }}</div>{% endfor %}
                </div>
                <div class="form-group">
                    {{ form.facility_type.label(class="form-label") }}
                    {{ form.facility_type(class="form-input", placeholder="e.g., Hospital, Clinic, CHC") }}
                    {% for e in form.facility_type.errors %}<div class="error">{{ e }}</div>{% endfor %}
                </div>
                <div class="form-group">
                    {{ form.facility_license_number.label(class="form-label") }}
                    {{ form.facility_license_number(class="form-input", placeholder="Enter license number") }}
                    {% for e in form.facility_license_number.errors %}<div class="error">{{ e }}</div>{% endfor %}
                </div>
                <div class="form-group">
                    {{ form.facility_address.label(class="form-label") }}
                    {{ form.facility_address(class="form-input", placeholder="Full address") }}
                    {% for e in form.facility_address.errors %}<div class="error">{{ e }}</div>{% endfor %}
                </div>
                <div class="form-group">
                    {{ form.facility_city.label(class="form-label") }}
                    {{ form.facility_city(class="form-input", placeholder="City name") }}
                    {% for e in form.facility_city.errors %}<div class="error">{{ e }}</div>{% endfor %}
                </div>
            </div>

            <div class="form-group">
                <label class="checkbox-container">
                    {{ form.terms() }}
                    <span><span data-translate-key="signup_agree_terms">I agree to the</span> <a href={{ url_for('tos') }}>Terms of Service</a></span>
                </label>
                 {% for e in form.terms.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-full-width" data-translate-key="signup_submit_btn">Create Account</button>
            </div>
            <div class="form-footer">
                <p><span data-translate-key="signup_already_account">Already have an account?</span> <a href="{{ url_for('login') }}" data-translate-key="signup_login_here">Login here</a></p>
            </div>
        </form>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const roleSelect = document.getElementById('role-select');
    const facilityFields = document.getElementById('facility-fields');
    
    function toggleFacilityFields() {
        const selectedRole = roleSelect.value;
        if (selectedRole === 'HEALTH_OFFICIAL') {
            facilityFields.style.display = 'block';
            // Make facility fields required
            const facilityInputs = facilityFields.querySelectorAll('input[type="text"]');
            facilityInputs.forEach(input => {
                if (input.name === 'facility_name' || input.name === 'facility_license_number') {
                    input.setAttribute('required', 'required');
                }
            });
        } else {
            facilityFields.style.display = 'none';
            // Remove required attribute
            const facilityInputs = facilityFields.querySelectorAll('input[type="text"]');
            facilityInputs.forEach(input => {
                input.removeAttribute('required');
            });
        }
    }
    
    roleSelect.addEventListener('change', toggleFacilityFields);
    toggleFacilityFields(); // Initial call
});
</script>
{% endblock %}