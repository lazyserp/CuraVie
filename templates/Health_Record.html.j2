{% extends "base.html.j2" %}
{% block title %}Worker Details - CuraVie{% endblock %}
{% block content %}
<div class="container form-container">
    <div class="card form-card">
        <div class="form-header">
            <h2 data-translate-key="worker_details_title">{{ page_title | default('Worker Details') }}</h2>
            <p data-translate-key="worker_details_subtitle">Please fill out your Health Record details and lifestyle details.</p>
        </div>
        
        <form method="POST" action="" novalidate>
            {{form.hidden_tag()}}
            <div class="form-group">
                {{ form.record_date.label(class="form-label") }}
                {{ form.record_date(class="form-input", placeholder="Enter Record Date ", **{'data-translate-key': 'placeholder_record_date'}) }}
                {% for e in form.record_date.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>
            <div class="form-group">
                {{ form.height_cm.label(class="form-label") }}
                {{ form.height_cm(class="form-input", placeholder="Enter your Height(cm)", **{'data-translate-key': 'placeholder_height_cm'}) }}
                {% for e in form.height_cm.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>
            <div class="form-group">
                {{ form.weight_kg.label(class="form-label") }}
                {{ form.weight_kg(class="form-input", placeholder="Enter your Weight(kg)", **{'data-translate-key': 'placeholder_weight_kg'}) }}
                {% for e in form.weight_kg.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>
            <div class="form-group">
                {{ form.blood_pressure_systolic.label(class="form-label") }}
                {{ form.blood_pressure_systolic(class="form-input", placeholder="Enter your Systolic Blood Pressure", **{'data-translate-key': 'placeholder_blood_pressure_systolic'}) }}
                {% for e in form.blood_pressure_systolic.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>
            <div class="form-group">
                {{ form.blood_pressure_diastolic.label(class="form-label") }}
                {{ form.blood_pressure_diastolic(class="form-input", placeholder="Enter your Diastolic Blood Pressure ", **{'data-translate-key': 'placeholder_blood_pressure_diastolic'}) }}
                {% for e in form.blood_pressure_diastolic.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>
            <div class="form-group">
                {{ form.any_chronic_disease.label(class="form-label") }}
                {{ form.any_chronic_disease(class="form-input", placeholder="Enter details of chronic disease (if any)", **{'data-translate-key': 'placeholder_any_chronic_disease'}) }}
                {% for e in form.any_chronic_disease.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>

            <div class="form-group">
                {{ form.work_hours_per_day.label(class="form-label") }}
                {{ form.work_hours_per_day(class="form-input", placeholder="Enter hours per day", **{'data-translate-key': 'placeholder_work_hours'}) }}
                {% for e in form.work_hours_per_day.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>
            <div class="form-group">
                <div class="checkbox-group">
                    {{ form.access_to_clean_water(class="form-checkbox") }}
                    {{ form.access_to_clean_water.label(class="form-label") }}
                </div>
                {% for e in form.access_to_clean_water.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>
            <div class="form-group">
                {{ form.smoking_habit.label(class="form-label") }}
                {{ form.smoking_habit(class="form-input") }}
                {% for e in form.smoking_habit.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>
            <div class="form-group">
                {{ form.alcohol_consumption.label(class="form-label") }}
                {{ form.alcohol_consumption(class="form-input") }}
                {% for e in form.alcohol_consumption.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>
            <div class="form-group">
                {{ form.diet_type.label(class="form-label") }}
                {{ form.diet_type(class="form-input") }}
                {% for e in form.diet_type.errors %}<div class="error">{{ e }}</div>{% endfor %}
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-full-width" data-translate-key="worker_details_submit_btn">Save Details</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}